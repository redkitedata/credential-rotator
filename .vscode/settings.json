{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "88"
    ],
    "python.linting.pylintArgs": [
        "--disable",
        "C0103,C0301,E1101,W0231,W0235" // https://docs.pylint.org/en/1.6.0/features.html
    ],
    "editor.formatOnSave": true,
    "azureFunctions.templateFilter": "Verified",
    "azureFunctions.deploySubpath": ".",
    "azureFunctions.scmDoBuildDuringDeployment": true,
    "azureFunctions.pythonVenv": ".venv",
    "azureFunctions.projectLanguage": "Python",
    "azureFunctions.projectRuntime": "~4",
    "debug.internalConsoleOptions": "neverOpen",
    "workbench.colorCustomizations": {
        "activityBar.background": "#24816b42",
        "titleBar.activeBackground": "#24816b",
        "titleBar.activeForeground": "#FDFBFE"
    },
    "cSpell.words": [
        "CICD",
        "sendgrid"
    ]
}